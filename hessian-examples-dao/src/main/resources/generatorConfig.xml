<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<!-- 配置文件路径 -->
	<properties resource="jdbc.properties" />

	<classPathEntry
		location="${mbg.driver.base}/.m2/repository/mysql/mysql-connector-java/5.1.29/mysql-connector-java-5.1.29.jar" />

	<context id="MySQLTables" targetRuntime="MyBatis3">
		<!--关闭注释 -->
		<commentGenerator>
			<property name="suppressDate" value="true" />
		</commentGenerator>

		<!--数据库连接信息 -->
		<jdbcConnection driverClass="${jdbc.driver}"
			connectionURL="${jdbc.url}" userId="${jdbc.username}" password="${jdbc.password}" />


		<!--生成的model 包路径 -->
		<javaModelGenerator targetPackage="me.leizhnxp.examples.hessian.dao.model"
			targetProject="MAVEN">
			<property name="enableSubPackages" value="ture" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!--生成xml mapper文件 路径 -->
		<sqlMapGenerator targetPackage="me.leizhnxp.examples.hessian.dao.mapper"
			targetProject="MAVEN">
			<property name="enableSubPackages" value="ture" />
		</sqlMapGenerator>

		<!-- 生成的Dao接口 的包路径 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="me.leizhnxp.examples.hessian.dao" targetProject="MAVEN">
			<property name="enableSubPackages" value="ture" />
		</javaClientGenerator>

		<!--对应数据库表名 -->
		<table tableName="account" domainObjectName="AccountModel"
			enableCountByExample="true" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="true"
			selectByExampleQueryId="false" >
		
		<property name="immutable" value="true" />	
		</table>

	</context>
</generatorConfiguration>